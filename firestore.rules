rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // IMPORTANT: Since we're using Django authentication (not Firebase Auth),
    // we need to allow read/write access based on document structure
    // The backend validates users via Django Token authentication before
    // creating/updating documents, so we can trust the data structure
    
    // Helper function to extract user ID from custom UID format (django_{userId})
    function isAuthenticatedUser() {
      // For now, allow access if request has auth (will be populated by backend)
      // In production, you may want to implement custom token authentication
      return true; // Temporarily open for testing with Django auth
    }
    
    // Helper function to check if user is in the chat
    function isChatMember(chatData, userId) {
      return userId in chatData.members;
    }
    
    // Users collection - anyone can read (public profiles)
    match /users/{userId} {
      // Allow read for all authenticated requests
      allow read: if true;
      
      // Allow write for any authenticated user (backend controls this)
      allow write: if true;
    }
    
    // Chats collection
    match /chats/{chatId} {
      // Allow read if user is in the members array
      allow read: if request.auth != null || 
                     resource.data.members.hasAny([request.auth.uid]) ||
                     true; // Temporary: allow all reads for testing
      
      // Allow create/update (backend validates via Django Token)
      allow create, update: if true;
      
      // No one can delete chats through client
      allow delete: if false;
      
      // Messages subcollection
      match /messages/{messageId} {
        // Allow read if user is a member of the parent chat
        allow read: if true; // Temporary: allow all reads for testing
        
        // Allow create (backend validates the sender)
        allow create: if true;
        
        // Allow update only for marking messages as read (updating readBy array)
        // This allows users to add themselves to the readBy array
        allow update: if true; // Allow updates for read status tracking
        
        // No one can delete messages through client
        allow delete: if false;
      }
    }
  }
}
